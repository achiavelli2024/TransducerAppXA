<?xml version="1.0" encoding="utf-8"?>
<!-- Layout inspirado no Form Windows que você forneceu.
     - Controles e IDs correspondem ao MainActivity.cs.
     - Top: IP + Connect / Disconnect
     - Centro: Painel com Angle/Torque, Parameters e botões (Set PSet + Start, Start, Stop, Copy, Clear)
     - Embaixo: Status + Results history (ListView) e Logs (ListView)
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="8dp">

    <!-- Row: IP / Connect / Disconnect -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="6dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="IP:" />

      <EditText
          android:id="@+id/txtIP"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:inputType="text"
          android:ems="10"
          android:paddingLeft="6dp"
          android:paddingRight="6dp"/>

      <Button
          android:id="@+id/btnConnectIP"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="CONNECT"
          android:layout_marginLeft="8dp"/>

      <Button
          android:id="@+id/btnDisconnect"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="DISCONNECT"
          android:layout_marginLeft="6dp"/>

    </LinearLayout>

    <!-- Row: Angle / Torque / Counters -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

      <!-- Left column: Angle/Torque display -->
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Angle:"/>
          <TextView android:id="@+id/tvAngle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0.00 º" android:layout_marginLeft="8dp"/>
          <Space android:layout_width="16dp" android:layout_height="wrap_content"/>
          <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Torque:"/>
          <TextView android:id="@+id/tvTorque" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0.000 Nm" android:layout_marginLeft="8dp"/>

        </LinearLayout>

        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingTop="4dp">
          <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Results:"/>
          <TextView android:id="@+id/tvResultsCounter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:layout_marginLeft="8dp"/>
          <Space android:layout_width="24dp" android:layout_height="wrap_content"/>
          <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Untight:"/>
          <TextView android:id="@+id/tvUntighteningsCounter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:layout_marginLeft="8dp"/>
        </LinearLayout>

      </LinearLayout>

      <!-- Middle column: Parameters (thresholds) -->
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:paddingLeft="8dp"
          android:paddingRight="8dp">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Parameters" android:textStyle="bold"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingTop="6dp">
          <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content">
            <EditText android:id="@+id/txtThresholdIniFree" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="numberDecimal" android:hint="threshold ini"/>
            <EditText android:id="@+id/txtThresholdEndFree" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="numberDecimal" android:hint="threshold end" android:layout_marginTop="6dp"/>
          </LinearLayout>

          <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:paddingLeft="8dp">
            <EditText android:id="@+id/txtTimeoutFree" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="number" android:hint="end timeout"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:layout_marginTop="6dp"/>
          </LinearLayout>
        </LinearLayout>

      </LinearLayout>

      <!-- Right column: Torque min/nom/max (matching Form's right column) -->
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingLeft="8dp">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Torque Min:"/>
        <EditText android:id="@+id/txtMinimumTorque" android:layout_width="120dp" android:layout_height="wrap_content" android:inputType="numberDecimal" android:layout_marginBottom="6dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Torque Nominal:"/>
        <EditText android:id="@+id/txtNominalTorque" android:layout_width="120dp" android:layout_height="wrap_content" android:inputType="numberDecimal" android:layout_marginBottom="6dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Torque Max:"/>
        <EditText android:id="@+id/txtMaximoTorque" android:layout_width="120dp" android:layout_height="wrap_content" android:inputType="numberDecimal" android:layout_marginBottom="6dp"/>

      </LinearLayout>

    </LinearLayout>

    <!-- Buttons row -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

      <Button
          android:id="@+id/btnInitRead"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Set PSet + Start"
          android:layout_marginRight="8dp"/>

      <Button
          android:id="@+id/btnStartRead"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="START"
          android:layout_marginRight="8dp"/>

      <Button
          android:id="@+id/btnStopRead"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="STOP"
          android:layout_marginRight="8dp"/>

      <Space android:layout_width="16dp" android:layout_height="wrap_content"/>

      <Button
          android:id="@+id/btnCopyLog"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="COPY LOG"
          android:layout_marginRight="6dp"/>

      <Button
          android:id="@+id/btnClearLog"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="CLEAR LOG"/>

    </LinearLayout>

    <!-- Status line -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Idle"
        android:textStyle="italic"
        android:paddingBottom="8dp"/>

    <!-- Results history header -->
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Results history" android:textStyle="bold"/>

    <!-- Results ListView -->
    <ListView
        android:id="@+id/lvResults"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:dividerHeight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"/>

    <!-- Logs header -->
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Logs" android:textStyle="bold"/>

    <!-- Logs ListView -->
    <ListView
        android:id="@+id/lvLog"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:dividerHeight="6dp"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"/>

  </LinearLayout>
</ScrollView>